{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "prisma generate && next build"
      }
    }
  ],
  "framework": "nextjs",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "next dev",
  "cleanUrls": true,
  "regions": ["fra1"],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 10 * * 1,4"
    },
    {
      "path": "/api/cron/jobs",
      "schedule": "0 7 * * *"
    }
  ]
} 